    "description": "(scoop bucket by arch3rPro)A cross-platform Markdown note-taking application dedicated to using AI to bridge recording and writing, organizing fragmented knowledge into a readable note.",
    "homepage": "https://notegen.top/",
    "license": {
        "identifier": "MIT license",
        "url": "https://github.com/codexu/note-gen#MIT-1-ov-file"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/codexu/note-gen/releases/download/note-gen-v0.25.2/NoteGen_0.25.2_x64-setup.exe#/dl.7z",
            "hash": "7467b3cfec056604c364b611f23a941703b4746774a4548c80650f56f4725702",
            "pre_install": "Remove-Item \"$dir\\`$*\", \"$dir\\icons\", \"$dir\\uninst*\" -Force -Recurse"
        }
    },
    "installer": {
        "script": [
            "# Create persist subdirectories for app/local and user/roaming data",
            "$persistRoot = $persist_dir",
            "New-Item -ItemType Directory -Force -Path (Join-Path $persistRoot 'appdata') | Out-Null",
            "New-Item -ItemType Directory -Force -Path (Join-Path $persistRoot 'userdata') | Out-Null",
            "",
            "# Targets used by NoteGen",
            "$localTarget = Join-Path $env:LOCALAPPDATA 'com.codexu.NoteGen'",
            "$roamingTarget = Join-Path $env:APPDATA 'com.codexu.NoteGen'",
            "",
            "# If NoteGen was previously launched and created real folders, remove them (consider backing up first)",
            "if (Test-Path $localTarget -PathType Container) { Remove-Item $localTarget -Recurse -Force }",
            "if (Test-Path $roamingTarget -PathType Container) { Remove-Item $roamingTarget -Recurse -Force }",
            "",
            "# Junctions to persist",
            "$appPersist = Join-Path $persistRoot 'appdata'",
            "$userPersist = Join-Path $persistRoot 'userdata'",
            "New-Item -ItemType Junction -Path $localTarget -Target $appPersist | Out-Null",
            "New-Item -ItemType Junction -Path $roamingTarget -Target $userPersist | Out-Null"
        ]
    },
    "uninstaller": {
        "script": [
            "# Remove junctions created during install",
            "$localTarget = Join-Path $env:LOCALAPPDATA 'com.codexu.NoteGen'",
            "$roamingTarget = Join-Path $env:APPDATA 'com.codexu.NoteGen'",
            "if (Test-Path $localTarget) { Remove-Item $localTarget -Force }",
            "if (Test-Path $roamingTarget) { Remove-Item $roamingTarget -Force }"
        ]
    },
    "bin": [
        [
            "note-gen.exe",
            "NoteGen"
        ]
    ],
    "shortcuts": [
        [
            "note-gen.exe",
            "NoteGen"
        ]
    ],
    "checkver": {
        "url": "https://api.github.com/repos/codexu/note-gen/releases",
        "jp": "$[0].assets[*].browser_download_url",
        "regex": "/releases/download/note-gen-v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/codexu/note-gen/releases/download/note-gen-v$version/NoteGen_$version_x64-setup.exe#/dl.7z"
            }
        },
        "hash": {
            "url": "$baseurl/latest.json"
        }
    }
}
